<div class="card text">
    <h4 class="card-header d-flex justify-content-between" style="background-color: antiquewhite">
        Danh sách Seller
        <a class="btn btn-sm btn-outline-danger" href="/admin/user/bidder" role="button">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Xem danh sách Bidder
        </a>
        <a class="btn btn-sm btn-outline-success" href="/admin/user/upgrade" role="button">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Xem yêu cầu nâng cấp
        </a>
    </h4>

    <table class="table" id="SellerTable" style="text-align: center">
        <thead>
        <tr class="table-active">
            <th scope="col">UserID</th>
            <th scope="col">Username</th>
            <th scope="col">Tình trạng kích hoạt</th>
            <th scope="col" style="text-align: center">Tính năng</th>
        </tr>
        </thead>
        <tbody>
        {{#each this.sellerList}}
            <tr class="table-info">
                <th scope="row">{{UserID}}</th>
                <td>{{Username}}</td>
                <td>
                    {{#ifCond Activate 1}}
                        Đã kích hoạt
                    {{/ifCond}}
                    {{#ifCond Activate 0}}
                        Chưa xác nhận mã OTP
                    {{/ifCond}}
                    {{#ifCond Activate -1}}
                        Đã vô hiệu hóa
                    {{/ifCond}}
                </td>
                <td class="text-center">
                    <a class="btn btn-sm btn-primary" href="/admin/user/seller/detail?id={{UserID}}" role="button">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    Chi tiết
                    </a>

                    {{#ifCond Activate -1}}
                        {{else}}
                        <a class="btn btn-sm btn-danger" value="{{UserID}}" value1="{{Username}}" id="btnDisable" role="button">
                            <i class=" fa fa-ban" aria-hidden="true"></i>
                            Vô hiệu hóa
                        </a>
                    {{/ifCond}}
                    <a class="btn btn-sm btn-warning" value="{{UserID}}" value1="{{Username}}" id="btnDown" role="button">
                        <i class="fa fa-arrow-down" aria-hidden="true"></i>
                        Giáng cấp
                    </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

{{#section 'js'}}
    <script>
        $("#SellerTable tbody").on("click", "#btnDown", function(e){
            var UserID=$(this).attr('value');
            var Username=$(this).attr('value1');
            var url=window.location+"/downgrade?id="+UserID;
            var answer=window.confirm('Bạn có muốn giáng cấp '+ Username + ' thành bidder');
            if(answer){
                $.post( url, function( data ) {
                    if(data.status==1){
                        alert(data.msg);
                        window.location.reload();
                    }
                });
            }
        });
        $("#SellerTable tbody").on("click", "#btnDisable", function(e){
            var UserID=$(this).attr('value');
            var Username=$(this).attr('value1');
            var url=window.location+"/disable?id="+UserID;
            var answer=window.confirm('Bạn có muốn vô hiệu hóa tài khoản '+ Username);
            if(answer){
                $.post( url, function( data ) {
                    if(data.status==1){
                        alert(data.msg);
                        window.location.reload();
                    }
                });
            }
        });
    </script>
{{/section}}