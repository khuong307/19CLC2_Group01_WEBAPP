{{#section 'css'}}
    <style>
        .comment-list{
            overflow: auto;
            max-height: 350px;
            border-radius: 5px;
            border-style: solid;
            border-width: 1px;
        }
    </style>
{{/section}}

<div class="card text">
    <h4 class="card-header d-flex justify-content-between">
        Lịch sử đánh giá
    </h4>
    <div class="card-body">
        <h5>Tổng số lượt thích: <span class="badge badge-danger ml-2">{{this.userInfo.LikePoint}}</span></h5>
        <h5>Tổng số lượt không thích: <span class="badge badge-danger ml-2">{{this.userInfo.DislikePoint}}</span></h5>
        <div class="comment-list mt-3">
            {{#each this.reviewList}}
                <div class="text-danger ml-3">{{format_date Time}}</div>
                <div class="d-flex flex-row comment-row mt-2">
                    <div class="p-2"><img src="https://i.imgur.com/Ur43esv.jpg" alt="user" width="50" class="rounded-circle"></div>
                    <div class="comment-text w-100">
                        <h6 class="font-medium">{{MaskCharacter Username}}
                            {{#if Status}}
                                <i class="fa fa-thumbs-up text-primary"></i>
                            {{else}}
                                <i class="fa fa-thumbs-down text-primary"></i>
                            {{/if}}
                            <a class="text-info" href="/products/detail/{{ProID}}">({{ProName}})</a>
                        </h6> <span class="m-b-15 d-block">{{Comment}}</span>
                    </div>
                </div>
                {{#unless @last}}
                    <div class="dropdown-divider"></div>
                {{/unless}}
            {{/each}}
        </div>
    </div>
</div>