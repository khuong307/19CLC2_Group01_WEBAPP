<div class="card text">
    <h4 class="card-header d-flex justify-content-between">
        Products
    </h4>
    <div class="card-body">
        {{#if this.empty}}
            <h5 class="card-title">No Information</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content</p>
        {{else}}
            <div class="row">
                {{#each this.products}}
                    <div class="col-sm-4 mb-3">
                        <div class="card h-100">
                            <img class="card-img-top" src="/public/imgs/sp/{{CatID1}}/{{CatID2}}/{{ProID}}/main.jpg" alt="{{ProName}}" title="{{ProName}}">
                            <div class="card-body">
                                <h5 class="card-title">{{ProName}}</h5>
                                <h5 class="card-title text-danger">{{format_number CurrentPrice}}</h5>
                                <p class="card-text">{{TinyDes}}</p>
                            </div>
                            <div class="card-footer text-muted">
                                <a class="btn btn-outline-primary" href="/products/detail/{{ProID}}" role="button">
                                    <i class="fa fa-eye"></i>
                                    Details
                                </a>
                                <a class="btn btn-outline-success" href="#" role="button">
                                    <i class="fa fa-eye"></i>
                                    Add to cart
                                </a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-end">
                    <li class="page-item">
                        {{#if this.isFirstPage}}
                            <a class="page-link" href="?page={{decrease_one this.currentPageIndex}}">
                            Previous
                            </a>
                        {{/if}}

                    </li>
                    {{#each this.pageNumbers}}
                        {{#if isCurrentPage}}
                            <li class="page-item active">
                                <a class="page-link" href="javascript:;">{{value}}</a>
                            </li>
                        {{else}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{value}}">{{value}}</a>
                            </li>
                        {{/if}}
                    {{/each}}
                    {{#if this.isLastPage}}
                        <a class="page-link" href="?page={{increase_one this.currentPageIndex}}">
                        Next
                        </a>
                    {{/if}}
                </ul>
            </nav>
        {{/if}}
    </div>



</div>